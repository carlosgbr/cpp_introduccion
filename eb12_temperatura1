
//temperatura1.cpp
//Se resumen los conocimietos obtenidos hasta el momento en un programa básico para
//calcular la temperatura en °F.
// 2017, Por http://about.me/carlosgbr
// Versión 1
// Compilado en https://www.tutorialspoint.com/compile_cpp_online.php

#include <iostream>

using namespace std;

int main()
{
    
    float tempC = 36.8;
    float tempF = 0;
    
    //obtenermos la teperatura en F a partir de la temperatura en C
    //para ello utilizamos la fórmula TF = C * 9/5 + 32
    
    tempF = tempC * 9/5 + 32;
    
    cout << tempC << "°C son equvalentes a " << tempF << "°F" << endl; 
   
   return 0;
}
